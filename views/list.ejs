<!DOCTYPE html>
<html>
<link rel="stylesheet" type="text/css" href="css/styles.css">
	<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
	<link rel="stylesheet" type="text/css" href="css/bin/font-awesome-4.7.0/css/font-awesome.css">
<head>
	<title>Todo List</title>
</head>
<body>
	<div class="box" id="heading">
		<h1><%=kindOfDay%></h1>
	</div>

	<div class="box">

		<%newListItem.forEach(function(item){%>

			<form action="/delete" method="post" >
				<div class="item">
					<p><span><!-- <i class="fa fa-check" aria-hidden="true" onChange="this.form.submit()"></i> -->
						<input type="checkbox" name="checkbox" value="<%=item._id%>" onchange="this.form.submit()">
						<input type="hidden" name="listName" value="<%=kindOfDay%>">
					</span><%=item.name%></p>
				</div>
			</form>

	<%});%>


		<form action="/" method="post" class="item">
			<input type="text" name="newItem" placeholder="New Item" required="">
			<button type="submit" name="button" value="<%=kindOfDay%>"><i class="fa fa-plus" aria-hidden="true"></i></button>
		</form>
	</div>
	<div style="display: flex;justify-content: center;">@Copyright 2020 Sahil Gharte</div>
	<script type="text/javascript" src="js/lib/jquery-3.5.1.min.js"></script>
	 <script type="text/javascript" src="js/todos.js"></script>
</body>
</html>